 <header>
   <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "myRecipes", root_path, class: "btn btn-lg btn-success", id: "logo" %>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <%= link_to '#', class: "dropdown-toggle", "data-toggle" => "dropdown" do %>
                Styles <b class="caret"></b>
              <% end %>
              <ul class='dropdown-menu'>
                <% Style.all.each do |style| %>
                  <li><%= link_to style.name, style_path(style) %></li>
                <% end %>
                <% if logged_in? %>
                  <li class='divider'></li>
                  <li><%= link_to(new_style_path) do %>New Style<% end %></li>
                <% end %>
              </ul>
            </li>
            <li class="dropdown">
              <%= link_to '#', class: "dropdown-toggle", "data-toggle" => "dropdown" do %>
                Ingredients <b class="caret"></b>
              <% end %>
              <ul class='dropdown-menu'>
                <% Ingredient.all.each do |ingredient| %>
                  <li><%= link_to ingredient.name, ingredient_path(ingredient) %></li>
                <% end %>
                <% if logged_in? %>
                  <li class='divider'></li>
                  <li><%= link_to(new_ingredient_path) do %>New Ingredient<% end %></li>
                <% end %>
              </ul>
            </li>
            <% if logged_in? %>
              <li><%= link_to "New Recipe", new_recipe_path %></li>
              <li class="dropdown">
                <%= link_to '#', class: "dropdown-toggle", "data-toggle" => "dropdown" do %>
                  <%= current_user.chefname %> <b class="caret"></b>
                <% end %>
                <ul class='dropdown-menu'>
                  <li><%= link_to "View Profile", chef_path(current_user) %></li>
                  <li><%= link_to "Edit Profile", edit_chef_path(current_user) %></li>
                  <li class="divider"></li>
                  <li><%= link_to "Logout", logout_path %></li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to "Log in", login_path %></li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
  </header>